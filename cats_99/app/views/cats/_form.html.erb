
<% if edit %>
    <%action_url = cat_url(cat)%>
    <% submit_button = "Update the cat" %>
<% else %>
    <% action_url = cats_url%>
    <% submit_button = "Add a new cat" %>
<% end %>

<form action="<%= action_url %>" method = "post">
    <% if edit %>
        <input type="hidden" name="_method" value="patch" >
    <% end %>
    <label for="name">Name</label>
    <input id="name" type="text" name="cat[name]" value="<%= cat.name%>">

    <label for="birth_date">DOB</label>
    <input id="birth_date" type="date" name="cat[birth_date]" value="<%= cat.birth_date%>"  max="2021-04-02">

    <label for="color">Color</label>
    <input id="color" type="dropdown" color="cat[color]" value="<%= cat.COLOR%>">

    <label for="sex">Sex</label>
    <input id="sex" type="radio" name="cat[sex]" value="<%= cat.SEX%>">

    <label for="description">Description</label>
    <input id="description" type="text" name="cat[description]" value="<%= cat.description%>">

    <input type="submit" value=" <%= submit_button %> ">
</form>
